<div id="content">
  <h1>New User</h1>
  <br>
  {{#if isError}}
    <p class="error">
        Please ensure all the required fields contain the correct information
    </p>
  {{/if}}
  <hr/>
  <div class="back">
    <label class="form-label">Name*</label>
    <br>
    {{input type="text" placeholder="john smith..." name="name" class="inputText" value=name}}
    <br>
    <br>
    <button class="btn_sub" {{action "addUser"}}>Add</button>
  </div>
</div>